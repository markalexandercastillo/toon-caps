{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-template": [
            "error"
        ]
    }
}
